<div class="post post-link post-short">
    <blockquote class="post-link__leading">
        <p>{{post.meta.quote}}</p>
        <cite>&rarr;
            <a href="{{post.meta.url}}">{{post.title}}</a>
              auf {{post.meta.url | urlGetHost}}{%if post.meta.via %}, via {{ post.meta.via | markdown | raw}}
              {% endif %}
        </cite>
    </blockquote>


    {{ post.currentContent() | raw }}


    <div class="post-meta">
        <time class="post-meta__date">
            <a href="{{post.url()}}">{{post.date | htmlDate }}</a>
        </time>
    </div>
</div>


